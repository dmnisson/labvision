<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
         http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
	<servlet>
		<servlet-name>labvision</servlet-name>
		<servlet-class>labvision.LabVisionServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>labvision-login</servlet-name>
		<servlet-class>labvision.AuthServlet</servlet-class>
	</servlet>
	<servlet>
	    <servlet-name>labvision-student</servlet-name>
	    <servlet-class>labvision.StudentServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>labvision</servlet-name>
		<url-pattern>/</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>labvision-login</servlet-name>
		<url-pattern>/login</url-pattern>
		<url-pattern>/logout</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
        <servlet-name>labvision-student</servlet-name>
        <url-pattern>/student/*</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
        <servlet-name>default</servlet-name>
        <url-pattern>/css/*</url-pattern>
	</servlet-mapping>
	<listener>
        <listener-class>labvision.LabVisionServletContextListener</listener-class>
	</listener>
    <context-param>
        <param-name>config_file</param-name>
        <param-value>~/.labvision/app.properties</param-value>
    </context-param>
    <security-constraint>
        <web-resource-collection>
            <url-pattern>/*</url-pattern>
        </web-resource-collection>
        <user-data-constraint>
            <transport-guarantee>CONFIDENTIAL</transport-guarantee>
        </user-data-constraint>
    </security-constraint>
</web-app>