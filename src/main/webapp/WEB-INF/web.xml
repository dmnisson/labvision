<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" version="3.1">
  <servlet>
    <servlet-name>labvision</servlet-name>
    <servlet-class>labvision.LabVisionServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>labvision-login</servlet-name>
    <servlet-class>labvision.AuthServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>labvision-student</servlet-name>
    <servlet-class>labvision.StudentServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>labvision-faculty</servlet-name>
    <servlet-class>labvision.FacultyServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>labvision-admin</servlet-name>
    <servlet-class>labvision.AdminServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>report-docs</servlet-name>
    <servlet-class>labvision.ReportDocumentServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>labvision</servlet-name>
    <url-pattern>/</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>labvision-login</servlet-name>
    <url-pattern>/login</url-pattern>
    <url-pattern>/logout</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>labvision-student</servlet-name>
    <url-pattern>/student/*</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>labvision-faculty</servlet-name>
    <url-pattern>/faculty/*</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>labvision-admin</servlet-name>
    <url-pattern>/admin/*</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>report-docs</servlet-name>
    <url-pattern>/reportdocs/*</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>default</servlet-name>
    <url-pattern>/css/*</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>default</servlet-name>
    <url-pattern>/webfonts/*</url-pattern>
  </servlet-mapping>
  <listener>
    <listener-class>labvision.LabVisionServletContextListener</listener-class>
  </listener>
  <filter>
    <filter-name>auth-filter</filter-name>
    <filter-class>labvision.AuthFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>auth-filter</filter-name>
    <url-pattern>/student/*</url-pattern>
    <url-pattern>/faculty/*</url-pattern>
    <url-pattern>/admin/*</url-pattern>
    <url-pattern>/reportdocs/*</url-pattern>
  </filter-mapping>
  <filter>
    <filter-name>generate-csrf-salt</filter-name>
    <filter-class>labvision.GenerateCsrfSalt</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>generate-csrf-salt</filter-name>
    <url-pattern>*</url-pattern>
  </filter-mapping>
  <filter>
    <filter-name>validate-csrf-salt</filter-name>
    <filter-class>labvision.ValidateCsrfSalt</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>validate-csrf-salt</filter-name>
    <url-pattern>/login</url-pattern>
    <url-pattern>/student/measurement/newvalue/*</url-pattern>
    <url-pattern>/student/report/edit/*</url-pattern>
    <url-pattern>/faculty/experiment/edit/*</url-pattern>
    <url-pattern>/faculty/report/score/*</url-pattern>
  </filter-mapping>
  <context-param>
    <param-name>config_file</param-name>
    <param-value>~/.labvision/app.properties</param-value>
  </context-param>
  <security-constraint>
    <web-resource-collection>
      <web-resource-name>root</web-resource-name>
      <url-pattern>/*</url-pattern>
    </web-resource-collection>
    <user-data-constraint>
      <transport-guarantee>CONFIDENTIAL</transport-guarantee>
    </user-data-constraint>
  </security-constraint>
</web-app>